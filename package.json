{
  "name": "@yarnaimo/tss",
  "version": "0.0.2",
  "repository": "github:yarnaimo/tss",
  "license": "MIT",
  "author": "yamaimo <yarnaimo@gmail.com>",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "debug": "node --inspect -r ts-node/register",
    "dev": "yarn ts-node src/index.ts",
    "prepare": "yarn build",
    "start": "NODE_ENV=production node dist/index.js",
    "test": "NODE_ENV=test jest",
    "ts-node": "ts-node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss,vue,gql,md}": [
      "prettier --write --ignore-path .gitignore",
      "git add"
    ],
    "./package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "dependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.11.4",
    "@types/prettier": "^1.16.1",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "sort-package-json": "^1.21.0",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "type-fest": "^0.3.0",
    "typescript": "^3.3.4000"
  }
}
